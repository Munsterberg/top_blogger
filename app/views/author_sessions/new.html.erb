<h1>Login</h1>

<%= form_tag author_sessions_path, method: :post do %>
<div class="form-group">
	<%= label_tag :email %>
	<%= text_field_tag :email %>
</div>
<div class="form-group">
	<%= label_tag :password %>
	<%= password_field_tag :password %>
</div>
<%= submit_tag 'Login' %>
<% end %>

<%= link_to 'Back', articles_path %>